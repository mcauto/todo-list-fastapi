{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "src.main:app",
                "--host",
                "0.0.0.0",
                "--port",
                "5000"
            ],
            "console": "integratedTerminal",
            "subProcess": true,
            "env": {
                "CORS_ALLOWS": "'[\"http://127.0.0.1\"]'",
                "USER_REPOSITORY_PATH": "${workspaceFolder}/src/apps/auth/repository/users.json",
            }
        }
    ]
}